{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}